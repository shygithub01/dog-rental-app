  return (
    <DndProvider backend={HTML5Backend}>
      <FirebaseProvider>
        <Routes>
          <Route path="/admin" element={<AdminRoute />} />
          <Route path="/" element={<AppContent />} />
        </Routes>
      </FirebaseProvider>
    </DndProvider>
  )
}

export default App
